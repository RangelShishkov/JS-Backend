<section class="search">
  <h1>Search</h1>

  <form class="search-form" action="#" method="POST">
    <input
      type="text"
      class="search-name"
      name="name"
      placeholder="Search Name..."
    />
    <input
      type="text"
      class="search-type"
      name="type"
      placeholder="Search Type..."
    />
    <button type="submit" class="btn-search">Search</button>
  </form>

  <!--If there are matches after search-->
  {{#each electronics}}
    <div class="search-result">
      <div class="search-list">
        <a href="/offers/{{_id}}/details" class="added-electronics-in-market">
          <img src="{{image}}" class="picture-added-electronics" />
          <h3>{{type}}</h3>
          <span>Price: {{price}}</span>
        </a>
      </div>

    </div>
  {{else}}
    <!--If there are no matches-->
    <div class="no-match">
      <p>No match was found!</p>
    </div>
  {{/each}}
</section>